<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".StartOfferDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="15sp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Start an Offer"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />




                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:textColor="#000"
            android:layout_marginTop="05dp"
            android:textStyle="bold"
            android:textSize="16sp"


            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:hint="Name"
                android:backgroundTint="@color/black_light"

                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="18sp"
                android:layout_height="45dp">



            </com.google.android.material.textfield.TextInputEditText>



        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:hint="Contact"
                android:textColor="#000"
                android:backgroundTint="@color/black_light"
                android:textColorHint="#000"
                android:textSize="18sp"
                android:layout_height="45dp">



            </com.google.android.material.textfield.TextInputEditText>



        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:singleLine="true"
                android:backgroundTint="@color/black_light"

                android:hint="Email ID"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="18sp"
                android:layout_height="45dp">



            </com.google.android.material.textfield.TextInputEditText>



        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Working Detail"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="16sp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm a"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:textSize="16sp"


            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:background="@drawable/employe_circle_rounded"
                android:layout_height="30dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="18sp"
                    android:layout_marginLeft="18sp"
                    android:textColor="@color/brown_color"
                    android:layout_height="wrap_content"
                    android:text="Employee"

                    />


            </FrameLayout>

            <FrameLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:background="@drawable/employe_circle_rounded"
                android:layout_height="30dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="18sp"
                    android:layout_marginLeft="18sp"
                    android:textColor="@color/brown_color"
                    android:layout_height="wrap_content"
                    android:text="Businessman"

                    />


            </FrameLayout>
            <FrameLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:background="@drawable/employe_circle_rounded"
                android:layout_height="30dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="18sp"
                    android:layout_marginLeft="18sp"
                    android:textColor="@color/brown_color"
                    android:layout_height="wrap_content"
                    android:text="Other"

                    />


            </FrameLayout>

        </LinearLayout>

        <!--
                <EditText
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:textColorHint="#DD1212"
                    android:padding="10dp"
                    android:backgroundTint="@color/brown_color"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter Official Work"

                    />-->




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:background="#A7A6A6" />

        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="16sp"

            android:id="@+id/tv_employe_next"
            android:layout_marginTop="20dp"
            android:text="Next"

            android:layout_marginLeft="10dp"
            android:background="@drawable/countinue_background"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

</LinearLayout>