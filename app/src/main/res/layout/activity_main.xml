<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login_image"
        android:fitsSystemWindows="true"

        android:orientation="vertical">

    </FrameLayout>





        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/card_background">
            <FrameLayout
                android:layout_marginRight="65dp"
                android:layout_marginLeft="65dp"
                android:id="@+id/frame_main"
                android:layout_marginBottom="145dp"
                android:layout_gravity="bottom"
                android:background="@drawable/netswl_icon"
                android:layout_width="match_parent"
                android:layout_height="45dp">


            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/get_started"
                android:layout_marginBottom="80dp"
                android:background="@drawable/get_started"
                android:gravity="center"
                android:text="Get started"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="35dp"
                android:id="@+id/tv_amenties"
                android:layout_marginBottom="45dp"
                android:text="Already have a profile or prefer to sign up?"
                android:textColor="#000"
                android:textSize="13sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/login_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:text="Log In"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="#ACA9A9"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/sign_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="55dp"
                    android:text="Sign Up"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />


            </FrameLayout>

        </FrameLayout>




    <ImageView
        android:layout_width="58dp"
        android:layout_marginBottom="220dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/center_icon"
        android:layout_height="58dp" />




</FrameLayout>